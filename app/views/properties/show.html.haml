              %h2.rank-text-a
                = "#{@property.rank.name}ランク"
                = image_tag "a-rank-gold.png", class: "rank-img"
            - when 2 then
              %h2.rank-text-b
                = "#{@property.rank.name}ランク"
                = image_tag "b-rank-silver.png", class: "rank-img"
            - when 3 then
              %h2.rank-text-c
                = "#{@property.rank.name}ランク"
                = image_tag "c-rank-bronze.png", class: "rank-img"
            - when 4 then
              %h2.rank-text-d
                = "#{@property.rank.name}ランク"
                = image_tag "d-rank-skull.png", class: "rank-img"
